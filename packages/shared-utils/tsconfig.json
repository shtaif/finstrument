{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true, // TODO: Attempt to refactor all necessary `import`s across project so this can be removed for saving some package size?
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
